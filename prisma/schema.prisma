// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id         Int      @id @default(autoincrement())
  name         String
  email        String           @unique
  password     String     
}


model inventory {
  id         Int      @id @default(autoincrement())
  name         String
  category  String
}


model cart {
  id         Int      @id @default(autoincrement())
  user_id     Int
  inventory_id  Int
  amount Int
  memo  String
  type  Boolean
  create_date DateTime?  
}


model store {
  id         Int      @id @default(autoincrement())
  user_id    Int
  inventory_id   Int
  amount  Int
  create_date  DateTime   @default(now())
  end_date  DateTime   @default(now())
}

model tool {
  id         Int      @id @default(autoincrement())
  user_id         Int
  title         String
  detail  String
  url String
}

model reference {
  id         Int      @id @default(autoincrement())
  tool_id  Int
  group_id Int
}

model group {
  id         Int      @id @default(autoincrement())
  user_id         Int
  group_name String
}
